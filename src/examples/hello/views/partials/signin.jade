extends auth

block auth
  form.signin.form-horizontal(ng-controller="SigninCtrl")
    | {{thingsInSigninCtrl}}
    p.error= message
    .control-group
      label.control-label(for='username') user name
      .controls
        input#username(type='text', name="username", placeholder='user name')

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(type='password', name="password", placeholder='Password')

    .form-actions
      button.btn.btn-primary(ng-click="submitSignin()", type='submit') Sign in
      &nbsp;
      | or&nbsp;
      a.show-signup(href="/signup") Sign up
