script(id="settings-dialog.html", type="text/ng-template", title="settings for hopen")
  //- hopen global application settings
  .modal-header Hopen settings
  .modal-body#settings-content
    label 自然语言
    select.select-without-button(ng-model="settings.naturalLanguage", ng-options="name for name in app.naturalLanguages", title="自然语言")
    label 计算机语言
    select.select-without-button(ng-model="settings.computerLanguage", ng-options="name for name in app.computerLanguages", title="计算机语言", style="width:120px")
  .modal-footer
    button(class="btn btn-primary", ng-click="ok()") OK
    button(class="btn btn-warning", ng-click="cancel()") Cancel

script(id="new-file-dialog.html", type="text/ng-template", title="新文件")
  //- hopen global application settings
  .modal-header 新文件
  .modal-body#settings-content
    label 文件名
    input(ng-model="settings.name", placeholder="noname", type="text")
    select.select-without-button(ng-model="settings.naturalLanguage", ng-options="name for name in app.naturalLanguages", title="自然语言")
    label 计算机语言
    select.select-without-button(ng-model="settings.computerLanguage", ng-options="name for name in app.computerLanguages", title="计算机语言", style="width:120px")
    label 显示语言
    select.select-without-button(ng-model="settings.displayLanguage", ng-options="name for name in app.allLanguages()", title="计算机语言", style="width:120px")
  .modal-footer
    button(class="btn btn-primary", ng-click="ok()") OK
    button(class="btn btn-warning", ng-click="cancel()") Cancel

script(id="show-computer-language-code-dialog.html", type="text/ng-template", title="显示计算机语言代码")
  .modal-header 计算机语言代码
