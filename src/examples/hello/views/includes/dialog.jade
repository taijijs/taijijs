script(id="edit-find-dialog.html", type="text/ng-template", title="查找")
  //- old hopen user sign in
  .modal-header 查找

  .modal-body#find-body
    input(placehoder="查找内容", type="text")
    div
      input#find-case(type='checkbox')
      label(for="find-case") 大小写相关
      input#find-replace-regexp(type='checkbox')
      label(for="find-regexp") 正规表达式
      input#find-word(type='checkbox')
      label(for="find-word") 全字匹配

  .modal-footer
    button(ng-click="find()", title='查找')
      img(src='images/find16.png')
    button(ng-click="prev()", title='前一个')
      img(src='images/up.png')
    button(ng-click="next()", title='下一个')
      img(src='images/down.png')
    button(class="btn", ng-click="cancel()", title='取消')
      img(src='images/cancel.png')

